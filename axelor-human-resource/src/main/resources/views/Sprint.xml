<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <grid name="sprint-summary-grid" title="Sprints summary"
    model="com.axelor.apps.project.db.Sprint">

    <field name="name"/>
    <field name="$totalAllocatedTime" title="Total allocated time" type="decimal"/>
    <field name="$totalEstimatedTime" title="Total estimated time" type="decimal"/>
    <field name="$totalPlannedTime" title="Total planned time" type="decimal"/>
    <field name="$totalRemainingTime" title="Total remaining time" type="decimal"/>

  </grid>

  <form id="hr-sprint-form" name="sprint-form" title="Sprint"
    model="com.axelor.apps.project.db.Sprint" extension="true">

    <extend target="//field[@name='projectTaskList']">
      <insert position="after">
        <field name="allocationLineList" grid-view="allocation-line-sprint-grid"
          form-view="allocation-line-form" showIf="id" colSpan="12"/>
        <button
          onClick="action-sprint-group-on-save,save,action-sprint-method-generate-allocations"
          name="generateAllocations" title="Generate allocations" showIf="id"/>
      </insert>
    </extend>

    <extend target="//panel[@name='mainPanel']">
      <insert position="after">
        <panel name="totalsPanel" colSpan="12">
          <field name="$totalAllocatedTime" title="Total allocated time" type="decimal"
            readonly="true" colSpan="3"/>
          <field name="$totalEstimatedTime" title="Total estimated time" type="decimal"
            readonly="true" colSpan="3"/>
          <field name="$totalPlannedTime" title="Total planned time" type="decimal"
            readonly="true" colSpan="3"/>
          <field name="$totalRemainingTime" title="Total remaining time" type="decimal"
            readonly="true" colSpan="3"/>
        </panel>
      </insert>
    </extend>

    <extend target="/">
      <attribute name="onSave" value="action-sprint-group-on-save"/>
    </extend>

  </form>

  <action-method name="action-sprint-method-generate-allocations">
    <call class="com.axelor.apps.hr.web.project.SprintController" method="generateAllocations"/>
  </action-method>

  <action-method name="action-sprint-method-update-or-create-project-plannings">
    <call class="com.axelor.apps.hr.web.project.SprintController"
      method="updateProjectPlannings"/>
  </action-method>

  <action-validate name="action-sprint-validate-upadte-or-create-project-plannings">
    <alert message="Do you want to create/update project planning lines?"
      confirm-btn-title="Yes" cancel-btn-title="No" action="save"/>
  </action-validate>

  <action-group name="action-sprint-group-on-save">
    <action name="action-sprint-validate-upadte-or-create-project-plannings"/>
    <action name="action-sprint-method-update-or-create-project-plannings"/>
  </action-group>

</object-views>
